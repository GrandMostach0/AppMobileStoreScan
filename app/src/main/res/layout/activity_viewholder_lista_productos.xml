<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutprincipal"
    android:layout_width="140dp"
    android:layout_height="260dp"
    android:layout_margin="5dp"
    android:background="@drawable/background_category"
    tools:context=".viewholder_listaProductos">

    <ImageView
        android:id="@+id/img_producto"
        android:layout_width="120dp"
        android:layout_height="125dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txt_informacion_producto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/border_txtsolid"
        android:text="Persona"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/img_producto"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="@+id/img_producto"
        app:layout_constraintTop_toBottomOf="@+id/img_producto" />

    <ImageButton
        android:id="@+id/imgBtn_eliminar"
        android:layout_width="60dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/border_redondeados_texto"
        android:backgroundTint="@android:color/holo_red_dark"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="@+id/txt_informacion_producto"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="@+id/txt_informacion_producto"
        app:layout_constraintTop_toBottomOf="@+id/txt_informacion_producto"
        app:srcCompat="@drawable/ic_clear"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>