<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="95dp"
    android:layout_height="170dp"
    android:layout_margin="5dp"
    android:background="@drawable/border_redondeados_texto"
    android:elevation="3dp">

    <ImageView
        android:id="@+id/categoriaPic"
        android:layout_width="wrap_content"
        android:layout_height="125dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/carnes" />

    <TextView
        android:id="@+id/categoriaNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="NombreCat"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/categoriaPic"
        app:layout_constraintStart_toStartOf="@+id/categoriaPic"
        app:layout_constraintTop_toBottomOf="@+id/categoriaPic" />
</androidx.constraintlayout.widget.ConstraintLayout>